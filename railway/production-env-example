# Prefect Configuration
PREFECT_API_URL=${PREFECT_API_URL}
PREFECT_SUBMIT=1

# Security
SECRET_KEY=${SECRET_KEY}
SENTRY_DSN=${SENTRY_DSN}

# Application Settings
DEBUG=False
LOG_LEVEL=INFO

# CORS
ALLOWED_ORIGINS=["https://*.railway.app", "https://*.vercel.app"]

# Cache Settings
SEARCH_CACHE_TTL=300

# Worker Settings
CRAWL_RATE=1000
